<div class="col-sm-12">
  <h1>Create a Team and Heroes!</h1>

  <form action="teams" method="post">

    <div class="form-group">
      <h2>Team</h2>
      <label for="name">Name</label>
      <input type="text" name="team[name]">

      <label for="motto">Motto</label>
      <input type="text" name="team[motto]">
    </div>

    <div class="form-group">
      <h3>Hero the First</h3>
      <label for="name">Name</label>
      <input type="text" name="team[members][super1][name]">

      <label for="power">Power</label>
      <input type="text" name="team[members][super1][power]">

      <label for="bio">Biography</label>
      <input type="text" name="team[members][super1][bio]">
    </div>

    <div class="form-group">
      <h3>Hero the Second</h3>
      <label for="name">Name</label>
      <input type="text" name="team[members][super2][name]">

      <label for="power">Power</label>
      <input type="text" name="team[members][super2][power]">

      <label for="bio">Biography</label>
      <input type="text" name="team[members][super2][bio]">
    </div>

    <input type="submit" name="submit" value="Assemble team!" class="btn btn-default">
  </form>
</div>
